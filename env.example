# MongoDB Authentication Demo - Environment Configuration
# Copy this file to .env and configure your credentials

# ============================================================================
# PASSWORD AUTHENTICATION
# ============================================================================
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USERNAME=admin
MONGO_PASSWORD=password
MONGO_AUTH_SOURCE=admin
MONGO_DATABASE=testdb

# ============================================================================
# CERTIFICATE AUTHENTICATION (X.509)
# ============================================================================
CERT_MONGO_HOST=localhost
CERT_MONGO_PORT=27017
CERT_MONGO_DATABASE=testdb
CERT_FILE_PATH=./certs/client-combined.pem
CA_FILE_PATH=./certs/ca.pem
CERT_SUBJECT=CN=client,OU=MyOrgUnit,O=MyOrg,L=MyCity,ST=MyState,C=US

# ============================================================================
# AWS IAM AUTHENTICATION (MongoDB Atlas)
# ============================================================================
AWS_MONGO_CLUSTER_URL=your-cluster.mongodb.net
AWS_MONGO_DATABASE=testdb
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_SESSION_TOKEN=your_aws_session_token
AWS_REGION=us-east-1

# ============================================================================
# API KEY AUTHENTICATION (MongoDB Atlas)
# ============================================================================
API_KEY_MONGO_CLUSTER_URL=your-cluster.mongodb.net
API_KEY_MONGO_DATABASE=testdb
MONGODB_API_PUBLIC_KEY=your_mongodb_public_api_key
MONGODB_API_PRIVATE_KEY=your_mongodb_private_api_key

# ============================================================================
# SERVICE ACCOUNT AUTHENTICATION (OIDC)
# ============================================================================
SERVICE_ACCOUNT_MONGO_CLUSTER_URL=your-cluster.mongodb.net
SERVICE_ACCOUNT_MONGO_DATABASE=testdb
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json
SERVICE_ACCOUNT_CLIENT_EMAIL=service-account@project.iam.gserviceaccount.com
SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
SERVICE_ACCOUNT_PROJECT_ID=your-gcp-project-id
OIDC_AUDIENCE=mongodb://atlas
OIDC_ISSUER=https://accounts.google.com

# ============================================================================
# GENERAL SETTINGS
# ============================================================================
DEBUG=false
NODE_ENV=development